@model MvcEventCalendar.Models.Event
@Html.HiddenFor(model => model.EventId)
<p>
    @Html.LabelFor(model => model.Category) @Html.DropDownList("CategoryId", new SelectList(ViewBag.Categories
    as System.Collections.IEnumerable, "CategoryId", "Name", Model.CategoryId))
</p>
<p>
    @Html.LabelFor(model => model.Place) @Html.DropDownList("PlaceId", new SelectList(ViewBag.Places
    as System.Collections.IEnumerable, "PlaceId", "Name", Model.PlaceId))
</p>
<p>
    @Html.LabelFor(model => model.Title) @Html.TextBoxFor(model => model.Title) @Html.ValidationMessageFor(model
    => model.Title)
</p>
<p>
    @Html.LabelFor(model => model.Price) @Html.TextBoxFor(model => model.Price) @Html.ValidationMessageFor(model => model.Price)
</p>
<p>
    @Html.LabelFor(model => model.EventDate) @Html.TextBoxFor(model => model.EventDate, new { style = "width: 100px;", id = "date" })
    @Html.ValidationMessageFor(model => model.EventDate)
</p>
<p>
    @Html.LabelFor(model => model.StartTime) @Html.TextBoxFor(model => model.StartTime, new { style = "width: 100px;", id = "time1" })
    @Html.ValidationMessageFor(model => model.StartTime)
</p>
<p>
    @Html.LabelFor(model => model.EndTime) @Html.TextBoxFor(model => model.EndTime, new { style = "width: 100px;", id = "time3" })
    @Html.ValidationMessageFor(model => model.EndTime)
</p>
<p>
    @Html.LabelFor(model => model.Description) @Html.TextBoxFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</p>
<p>
    @Html.LabelFor(model => model.EventPlaceUrl) @Html.TextBoxFor(model => model.EventPlaceUrl, new { })
    <input type="file" id="my_file_field" name="submit" text="upload" />
    @Html.ValidationMessageFor(model => model.EventPlaceUrl)
</p>
<script type="text/javascript">
    $('#date').datepicker();
    $('input[type=file]').change(function (e) {
        var ext = $('#my_file_field').val().split('.').pop().toLowerCase();
        if ($.inArray(ext, ['gif', 'png', 'jpg', 'jpeg']) == -1) {
            alert('invalid extension! choose >> .png, .gif, .jpg');
            $('#my_file_field').val("");
        }
    });


    $(function () {

        // Datepicker
        $('#datepicker').datepicker({
            inline: true
        });

        //hover states on the static widgets
        $('#dialog_link, ul#icons li').hover(
					function () { $(this).addClass('ui-state-hover'); },
					function () { $(this).removeClass('ui-state-hover'); }
				);

    });


</script>
